// spread (...)

// 2.create array with spread operator
let x = [5, 6, 7, 8];
let a = [1, 2, 3];
let b = [0, ...a, 4];
console.log(b); // [ 0, 1, 2, 3, 4 ]

const z = "today is a good day";
const m = [...z];
console.log(m); /*
[
    't', 'o', 'd', 'a', 'y',
    ' ', 'i', 's', ' ', 'a',
    ' ', 'g', 'o', 'o', 'd',
    ' ', 'd', 'a', 'y'
  ] */
// for...of use with array
for (const ch of m) {
  console.log(ch);
}
for (let value of x) {
  console.log(x);
}
